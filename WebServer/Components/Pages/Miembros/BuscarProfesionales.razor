@page "/miembros/buscarprofesionales"

@inject IProfesionalService _profesionalService
@rendermode InteractiveServer


@if (Profesionales == null)
{
    <div class="d-flex align-items-center justify-content-center" style="height: 100vh;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else
{
@* --- Encabezado --- *@
<div class="container py-4">
        <EncabezadoPage Titulo="🔍 Buscar Profesionales" Descripcion="Encuentra libros en nuestro catálogo" />

    @* --- Sección de busqueda --- *@
        <SeccionBusqueda Profesionales="Profesionales" OnBuscar="Buscar" />

    @* --- Sección de resultados --- *@
    <div class="row">
        <div class="col-12">
                <ResultadoBusqueda Cantidad="Profesionales.Count" TextoResultado="@(Profesionales.Count == 1 ? "profesional encontrado" : "profesionales encontrados")" />
            @if (Profesionales.Count == 0 && !IsBusy)
            {
                <div class="card shadow rounded-4 mb-3" style="background-color: LightYellow; border-color: Orange;">
                    <div class="card-body text-center">
                        <div class="fw-bold" style="color: DarkOrange;">🤔 Sin resultados</div>
                        <div class="text-muted">Intenta con otros términos de búsqueda o ajusta los filtros</div>
                        <div class="text-muted small mt-2">💡 Tip: Usa palabras clave simples y verifica que los filtros apropiados estén seleccionados</div>
                    </div>
                </div>
            }
            @foreach (var profesional in Profesionales)
            {
                    <CardsProfesional profesional="profesional" />
            }
        </div>
    </div>
</div>
}
@code {
    // Resultados
    List<Profesional>? Profesionales { get; set; } = new();
    bool IsBusy { get; set; } = false;

    protected async override Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Buscar(new FilterProfesionalDTO(){ForNombre=true});
        }
    }
    
    async Task Buscar(FilterProfesionalDTO filterDTO)
    {
        IsBusy = true;
        StateHasChanged();
        // TODO: Lógica de búsqueda real aquí (llamada a API)
      
        Profesionales = await _profesionalService.GetWithFilterAsync(filterDTO);
        IsBusy = false;
        StateHasChanged();
    }
}