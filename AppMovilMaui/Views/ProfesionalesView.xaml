<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AppMovil.ViewModels"
             xmlns:converters="clr-namespace:AppMovilMaui.Converters"
             x:Class="AppMovil.Views.ProfesionalesView"
             Title="Lista de profesionales"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StringNotNullOrEmptyConverter x:Key="StringNotNullOrEmptyConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.BindingContext>
        <viewModels:ProfesionalesViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, *, Auto, Auto">
        <HorizontalStackLayout Grid.Row="0">
            <Label Text="Buscar:"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="0,10,0,10"/>
            <Entry Placeholder="Buscar profesionales..."
                   Text="{Binding FilterProfessionals}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="0,10,0,10"/>
        </HorizontalStackLayout>

        <!-- Mensaje de error o vacÃ­o -->
        <Label Grid.Row="1"
               Text="{Binding MensajeError}"
               TextColor="Red"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               Margin="0,10,0,10"
               IsVisible="{Binding MensajeError, Converter={StaticResource StringNotNullOrEmptyConverter}}" />

        <ScrollView Grid.Row="1">
            <ListView 
             Grid.Row="1"
             ItemsSource="{Binding Profesionales}"
             SelectedItem="{Binding SelectedProfessional, Mode=TwoWay}"
             SelectionMode="Single"
             IsPullToRefreshEnabled="True"
             RefreshCommand="{Binding ObtenerProfesionalesCommand}"
             IsRefreshing="{Binding IsRefreshing}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="10">
                                <Image Source="{Binding Imagen}" HeightRequest="80" WidthRequest="80" />
                                <StackLayout Orientation="Vertical" Padding="10,0,0,0">
                                    <Label Text="{Binding Nombre}" FontAttributes="Bold" />
                                    <Label Text="{Binding Matricula}" />
                                    <Label Text="{Binding Especialidad}" />
                                    <Label Text="{Binding Email}" />
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>
        <Button Text="Agregar profesional"
            Command="{Binding AgregarProfesionalCommand}"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Margin="0,10,0,10"
            Grid.Row="2"/>
        <Button Text="Editar profesional"
            Command="{Binding EditarProfesionalCommand}"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Margin="0,10,0,10"
            Grid.Row="3"/>
    </Grid>
</ContentPage>