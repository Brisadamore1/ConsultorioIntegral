@page "/"

<PageTitle>Consultorio Integral</PageTitle>

<div class="container mt-1">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <HeaderPage 
                TitlePage="Bienvenido a Consultorio Integral" 
                SubtitlePage="Sistema completo de gestión médica para organizar pacientes, profesionales, turnos y contactos de emergencia de manera eficiente y profesional." />

            <div class="row g-4 mt-4">
                <div class="col-md-6 col-lg-3">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <span class="bi-icon bi-people-fill-home"></span>
                            </div>
                            <h5 class="card-title">Pacientes</h5>
                            <p class="card-text text-muted small">Gestión completa de pacientes</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <span class="bi-icon bi-person-vcard-fill-home"></span>
                            </div>
                            <h5 class="card-title">Profesionales</h5>
                            <p class="card-text text-muted small">Administración de profesionales</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <span class="bi-icon bi-calendar-check-fill-home"></span>
                            </div>
                            <h5 class="card-title">Turnos</h5>
                            <p class="card-text text-muted small">Control de citas y turnos</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <span class="bi-icon bi-telephone-fill-home"></span>
                            </div>
                            <h5 class="card-title">Emergencias</h5>
                            <p class="card-text text-muted small">Contactos de emergencia</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
