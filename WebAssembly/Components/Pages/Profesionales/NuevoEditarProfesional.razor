@page "/nuevoeditarprofesional"
@inject IProfesionalService ProfesionalService
@inject NavigationManager NavigationManager
@inject SweetAlertService SweetAlert

<HeaderPage TitlePage="Nuevo Profesional"/>

@if (profesional == null)
{
    <p class="text-center mt-3"><em>Cargando...</em></p>
}
else
{
    <EditForm Model="profesional" OnValidSubmit="Guardar">
        <DataAnnotationsValidator />

        <div class="form-group mb-2">
            <label for="Nombre">Nombre: <span class="text-danger">*</span></label>
            <InputText id="Nombre" class="form-control" @bind-Value="profesional.Nombre" />
            <ValidationMessage For="@(() => profesional.Nombre)" />
        </div>

        <div class="form-group mb-2">
            <label for="Profesión">Profesión: <span class="text-danger">*</span></label>
            <InputText id="Profesión" class="form-control" @bind-Value="profesional.Profesion" />
            <ValidationMessage For="@(() => profesional.Profesion)" />
        </div>

        <div class="form-group mb-2">
            <label for="Telefono">Matrícula: <span class="text-danger">*</span></label>
            <InputText id="Telefono" class="form-control" @bind-Value="profesional.Matricula" />
            <ValidationMessage For="@(() => profesional.Matricula)" />
        </div>

        <div class="form-group mb-2">
            <label for="Especialidad">Especialidad: <span class="text-danger">*</span></label>
            <InputText id="Especialidad" class="form-control" @bind-Value="profesional.Especialidad" />
            <ValidationMessage For="@(() => profesional.Especialidad)" />
        </div>

        <div class="form-group mb-2">
            <label for="Email">Email:</label>
            <InputText id="Email" class="form-control" @bind-Value="profesional.Email" placeholder="ejemplo@email.com" />
            <ValidationMessage For="@(() => profesional.Email)" />
        </div>

        <div class="form-group mb-2">
            <label for="Telefono">Teléfono: <span class="text-danger">*</span></label>
            <InputText id="Telefono" class="form-control" @bind-Value="profesional.Telefono" />
            <ValidationMessage For="@(() => profesional.Telefono)" />
        </div>

        <button type="submit" class="btn btn-primary mb-2" disabled="@guardando">
            @if (guardando)
            {
                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                <span>Guardando...</span>
            }
            else
            {
                <span>Guardar</span>
            }
        </button>
        <button type="button" class="btn btn-secondary mb-2" @onclick="Cancelar" disabled="@guardando">Cancelar</button>

        <ValidationSummary />
    </EditForm>
}

@code {
    [SupplyParameterFromQuery]
    [Parameter]
    public int IdProfesionalEditado { get; set; }

    private Profesional? profesional;

    private bool guardando = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            
            if (IdProfesionalEditado != 0)
            {
                profesional = await ProfesionalService.GetByIdAsync(IdProfesionalEditado);
                if (profesional == null)
                {
                    await SweetAlert.FireAsync("Error", "No se encontró el paciente", SweetAlertIcon.Error);
                    profesional = new Profesional();
                }
            }
            else
            {
                profesional = new Profesional();
            }
        }
        catch (Exception ex)
        {
            await SweetAlert.FireAsync("Error", $"Error al cargar datos: {ex.Message}", SweetAlertIcon.Error);
            profesional = new Profesional();
        }   
    }

    private async Task Guardar()
    {
        try
        {
            guardando = true;
            StateHasChanged();

            if (profesional != null)
            {
                // // Asegurar que los campos opcionales no sean null si están vacíos
                // if (string.IsNullOrWhiteSpace(profesional.Email))
                // {
                //     profesional.Email = string.Empty;
                // }
                
                // if (string.IsNullOrWhiteSpace(profesional.Direccion))
                // {
                //     profesional.Direccion = string.Empty;
                // }

                // Limpiar navegación para evitar referencia circular
                // profesional.Profesional = null;

                if (IdProfesionalEditado == 0)
                {
                    await ProfesionalService.AddAsync(profesional);
                    await SweetAlert.FireAsync("Éxito", "Profesional agregado correctamente", SweetAlertIcon.Success);
                }
                else
                {
                    profesional.Id = IdProfesionalEditado;
                    await ProfesionalService.UpdateAsync(profesional);
                    await SweetAlert.FireAsync("Éxito", "Profesional actualizado correctamente", SweetAlertIcon.Success);
                }

                NavigationManager.NavigateTo("/profesionales");
            }
        }
        catch (Exception ex)
        {
            await SweetAlert.FireAsync("Error", $"Error al guardar: {ex.Message}", SweetAlertIcon.Error);
        }
        finally
        {
            guardando = false;
        }
    }

    private void Cancelar()
    {
        NavigationManager.NavigateTo("/profesionales");
    }
}