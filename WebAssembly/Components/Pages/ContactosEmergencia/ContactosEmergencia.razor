@page "/contactosemergencia"
@inject IGenericService<ContactoEmergencia> ContactoEmergenciaService
@inject NavigationManager NavigationManager
@inject ILogger<ContactoEmergencia> Logger
@inject SweetAlertService SweetAlert

<HeaderPage 
    TitlePage="Contactos de Emergencia"
    SubtitlePage="Mantenga actualizada la información de contactos de emergencia de cada paciente para responder rápidamente ante cualquier situación crítica."
    ButtonText="Nuevo Contacto de Emergencia"
    OnButtonClick="AgregarContactoEmergencia" />

@if (cargando)
{
    <p><em>Cargando contactos emergencia...</em></p>
}
else if (!string.IsNullOrEmpty(mensajeError))
{
    <div class="alert alert-danger">
        <h5>Error al cargar contactos emergencia:</h5>
        <p>@mensajeError</p>
        <button class="btn btn-primary" @onclick="CargarContactosEmergencia">Reintentar</button>
    </div>
}
else
{
    <DataTable TItem="ContactoEmergencia" 
               Items="contactosemergencia" 
               OnEdit="EditarContactoEmergenciaObj"
               OnDelete="Eliminar"
               EmptyMessage="No hay contactos de emergencia registrados">
        <HeaderContent>
            <th>ID</th>
            <th>Nombre</th>
            <th>Relación</th>
            <th>Teléfono</th>
            <th>Paciente</th>
            <th class="text-center">Acciones</th>
        </HeaderContent>
        <RowContent>
            <td>@context.Id</td>
            <td><strong>@context.Nombre</strong></td>
            <td>@context.Relacion</td>
            <td>@context.Telefono</td>
            <td><strong>@(context.Paciente != null ? context.Paciente.Nombre : "Sin asignar")</strong></td>
        </RowContent>
    </DataTable>
}

@code {
    private List<ContactoEmergencia>? contactosemergencia;
    private bool cargando = true;
    private string? mensajeError;

    protected override async Task OnInitializedAsync()
    {
        await CargarContactosEmergencia();
    }

    private async Task CargarContactosEmergencia()
    {
        try
        {
            cargando = true;
            mensajeError = null;
            StateHasChanged();

            contactosemergencia = await ContactoEmergenciaService.GetAllAsync(string.Empty);
            Logger.LogInformation($"Contactos emergencia obtenidos {contactosemergencia?.Count}");

            if (contactosemergencia == null)
            {
                contactosemergencia = new List<ContactoEmergencia>();
                mensajeError = "El servicio devolvió una respuesta nula";
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al cargar datos: {ex.Message}";
            contactosemergencia = new List<ContactoEmergencia>();
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private void AgregarContactoEmergencia()
    {
        NavigationManager.NavigateTo("/nuevoeditarcontactoemergencia");
    }

    private void EditarContactoEmergenciaObj(ContactoEmergencia contacto)
    {
        NavigationManager.NavigateTo($"/nuevoeditarcontactoemergencia?IdContactoEmergenciaEditado={contacto.Id}");
    }

    private async Task Eliminar(ContactoEmergencia contactoemergencia)
    {
        try
        {
            var respuesta = await SweetAlert.FireAsync(new SweetAlertOptions
            {
                Title = "Borrando Contacto de Emergencia",
                Text = $"¿Está seguro que desea eliminar el registro de {contactoemergencia.Nombre}?",
                Icon = SweetAlertIcon.Warning,
                ShowCancelButton = true,
                ConfirmButtonText = "Sí, quiero borrarlo",
                CancelButtonText = "No, esperar"
            });

            if (respuesta.IsConfirmed)
            {
                await ContactoEmergenciaService.DeleteAsync(contactoemergencia.Id);
                await SweetAlert.FireAsync("Eliminado", "El registro ha sido eliminado correctamente", SweetAlertIcon.Success);
                await CargarContactosEmergencia();
            }
        }
        catch (Exception ex)
        {
            await SweetAlert.FireAsync("Error", $"Error al eliminar: {ex.Message}", SweetAlertIcon.Error);
        }
    }
}
