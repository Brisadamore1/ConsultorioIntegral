@page "/pacientes"
@inject IGenericService<Paciente> PacienteService
@inject NavigationManager NavigationManager
@inject SweetAlertService SweetAlert

<HeaderPage TitlePage="Pacientes"/>

@if (pacientes == null)
{
    <p><em>Cargando pacientes...</em></p>
}
else
{
    <button class="btn btn-primary mb-3" @onclick="AgregarPaciente">Agregar Nuevo Paciente</button>
    
    @if (!pacientes.Any())
    {
        <div class="alert alert-info">No hay pacientes registrados</div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Dni</th>
                    <th>Fecha Nacimiento</th>
                    <th>Email</th>
                    <th>Teléfono</th>
                    <th>Profesional</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var paciente in pacientes)
                {
                    <tr>
                        <td>@paciente.Id</td>
                        <td>@paciente.Nombre</td>
                        <td>@paciente.Dni</td>
                        <td>@(paciente.FechaNacimiento?.ToString("dd/MM/yyyy") ?? "-")</td>
                        <td>@paciente.Email</td>
                        <td>@paciente.Telefono</td>
                        <td>@(paciente.Profesional != null ? paciente.Profesional.Nombre : "Sin asignar")</td>
                        <td>
                            <button class="btn btn-sm btn-warning" @onclick="() => EditarPaciente(paciente.Id)">
                                Editar
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-danger" @onclick="() => Eliminar(paciente)">
                                Eliminar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@code {
    private List<Paciente>? pacientes;

    protected override async Task OnInitializedAsync()
    {
        await CargarPacientes();
    }

    private async Task CargarPacientes()
    {
        try
        {
            pacientes = await PacienteService.GetAllAsync(string.Empty);
        }
        catch (Exception ex)
        {
            await SweetAlert.FireAsync("Error", $"Error al cargar pacientes: {ex.Message}", SweetAlertIcon.Error);
            pacientes = new List<Paciente>();
        }
    }

    private void AgregarPaciente()
    {
        NavigationManager.NavigateTo("/nuevoeditarpaciente");
    }

    private void EditarPaciente(int id)
    {
        NavigationManager.NavigateTo($"/nuevoeditarpaciente?IdPacienteEditado={id}");
    }

    private async Task Eliminar(Paciente paciente)
    {
        try
        {
            var respuesta = await SweetAlert.FireAsync(new SweetAlertOptions
            {
                Title = "Borrando Paciente",
                Text = $"¿Está seguro que desea borrar al paciente {paciente.Nombre}?",
                Icon = SweetAlertIcon.Warning,
                ShowCancelButton = true,
                ConfirmButtonText = "Sí, quiero borrarlo",
                CancelButtonText = "No, esperar"
            });

            if (respuesta.IsConfirmed)
            {
                await PacienteService.DeleteAsync(paciente.Id);
                await SweetAlert.FireAsync("Eliminado", "El paciente ha sido eliminado correctamente", SweetAlertIcon.Success);
                await CargarPacientes();
            }
        }
        catch (Exception ex)
        {
            await SweetAlert.FireAsync("Error", $"Error al eliminar: {ex.Message}", SweetAlertIcon.Error);
        }
    }
}
