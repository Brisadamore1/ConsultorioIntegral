@page "/pacientes"
@inject IGenericService<Paciente> PacienteService
@inject NavigationManager NavigationManager
@inject ILogger<Paciente> Logger
@inject SweetAlertService SweetAlert

<HeaderPage 
    TitlePage="Pacientes"
    SubtitlePage="Administración de pacientes para un seguimiento eficiente y planificación de turnos."
    ButtonText="Nuevo Paciente"
    OnButtonClick="AgregarPaciente" />

@if (pacientes == null)
{
    <p><em>Cargando pacientes...</em></p>
}
else if (!pacientes.Any())
{
    <div class="alert alert-info">No hay pacientes registrados</div>
}
else
{
    <DataTable TItem="Paciente" 
               Items="pacientes" 
               OnEdit="EditarPacienteObj"
               OnDelete="Eliminar"
               EmptyMessage="No hay pacientes registrados">
        <HeaderContent>
            <th>ID</th>
            <th>Paciente</th>
            <th>DNI</th>
            <th>Fecha Nacimiento</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Profesional</th>
            <th class="text-center">Acciones</th>
        </HeaderContent>
        <RowContent>
            <td class="id-column">@context.Id</td>
            <td class="name-column"><strong>@context.Nombre</strong></td>
            <td>@context.Dni</td>
            <td>@FormatearFecha(context.FechaNacimiento)</td>
            <td>@FormatearEmail(context.Email)</td>
            <td>@context.Telefono</td>
            <td class="name-column">@(context.Profesional != null ? context.Profesional.Nombre : "Sin asignar")</td>
        </RowContent>
    </DataTable>
}

@code {
    private List<Paciente>? pacientes;

    protected override async Task OnInitializedAsync()
    {
        await CargarPacientes();
    }

    private async Task CargarPacientes()
    {
        try
        {
            pacientes = await PacienteService.GetAllAsync(string.Empty);
            Logger.LogInformation($"Pacientes obtenidos {pacientes?.Count}");
        }
        catch (Exception ex)
        {
            await SweetAlert.FireAsync("Error", $"Error al cargar pacientes: {ex.Message}", SweetAlertIcon.Error);
            pacientes = new List<Paciente>();
        }
    }

    private string FormatearFecha(DateTime fecha)
    {
        if (fecha == DateTime.MinValue || fecha.Year < 1900)
        {
            return "Sin asignar";
        }
        return fecha.ToString("dd/MM/yyyy");
    }

    private string FormatearEmail(string? email)
    {
        return string.IsNullOrEmpty(email) ? "Sin asignar" : email;
    }

    private void AgregarPaciente()
    {
        NavigationManager.NavigateTo("/nuevoeditarpaciente");
    }

    private void EditarPacienteObj(Paciente paciente)
    {
        NavigationManager.NavigateTo($"/nuevoeditarpaciente?IdPacienteEditado={paciente.Id}");
    }

    private async Task Eliminar(Paciente paciente)
    {
        try
        {
            var respuesta = await SweetAlert.FireAsync(new SweetAlertOptions
            {
                Title = "Borrando Paciente",
                Text = $"¿Está seguro que desea eliminar el registro de {paciente.Nombre}?",
                Icon = SweetAlertIcon.Warning,
                ShowCancelButton = true,
                ConfirmButtonText = "Sí, quiero borrarlo",
                CancelButtonText = "No, esperar"
            });

            if (respuesta.IsConfirmed)
            {
                await PacienteService.DeleteAsync(paciente.Id);
                await SweetAlert.FireAsync("Eliminado", "El registro ha sido eliminado correctamente", SweetAlertIcon.Success);
                await CargarPacientes();
            }
        }
        catch (Exception ex)
        {
            await SweetAlert.FireAsync("Error", $"Error al eliminar: {ex.Message}", SweetAlertIcon.Error);
        }
    }
}
