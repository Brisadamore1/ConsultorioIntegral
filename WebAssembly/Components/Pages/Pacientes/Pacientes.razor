@page "/pacientes"
@using Newtonsoft.Json
@inject IGenericService<Paciente> PacienteService
@inject NavigationManager NavigationManager
@inject SweetAlertService SweetAlert

<HeaderPage TitlePage="Pacientes"/>

@if (cargando)
{
    <p><em>Cargando pacientes...</em></p>
}
else if (!string.IsNullOrEmpty(mensajeError))
{
    <div class="alert alert-danger">
        <h5>Error al cargar pacientes:</h5>
        <p>@mensajeError</p>
        <button class="btn btn-primary" @onclick="CargarPacientes">Reintentar</button>
    </div>
}
else if (pacientes == null || !pacientes.Any())
{
    <button class="btn btn-primary mb-3" @onclick="AgregarPaciente">Agregar Nuevo Paciente</button>
    <div class="alert alert-info">No hay pacientes registrados</div>
}
else
{
    <button class="btn btn-primary mb-3" @onclick="AgregarPaciente">Agregar Nuevo Paciente</button>
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>DNI</th>
                <th>Fecha Nacimiento</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>Profesional</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var paciente in pacientes)
            {
                <tr>
                    <td>@paciente.Id</td>
                    <td>@paciente.Nombre</td>
                    <td>@paciente.Dni</td>
                    <td>@FormatearFecha(paciente.FechaNacimiento)</td>
                    <td>@(string.IsNullOrEmpty(paciente.Email) ? "-" : paciente.Email)</td>
                    <td>@paciente.Telefono</td>
                    <td>@(paciente.Profesional != null ? paciente.Profesional.Nombre : "Sin asignar")</td>
                    <td>
                        <button class="btn btn-sm btn-warning" @onclick="() => EditarPaciente(paciente.Id)">
                            Editar
                        </button>
                    </td>
                    <td>
                        <button class="btn btn-sm btn-danger" @onclick="() => Eliminar(paciente)">
                            Eliminar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Paciente>? pacientes;
    private bool cargando = true;
    private string? mensajeError;

    protected override async Task OnInitializedAsync()
    {
        await CargarPacientes();
    }

    private async Task CargarPacientes()
    {
        try
        {
            cargando = true;
            mensajeError = null;
            StateHasChanged();

            pacientes = await PacienteService.GetAllAsync(string.Empty);
            
            if (pacientes == null)
            {
                pacientes = new List<Paciente>();
                mensajeError = "El servicio devolvió una respuesta nula";
            }
        }
        catch (HttpRequestException httpEx)
        {
            mensajeError = $"Error de conexión: {httpEx.Message}. Verifica que el Backend esté ejecutándose.";
            pacientes = new List<Paciente>();
        }
        catch (JsonException jsonEx)
        {
            mensajeError = $"Error al deserializar los datos: {jsonEx.Message}. Puede haber un problema con el formato de FechaNacimiento en la base de datos.";
            pacientes = new List<Paciente>();
        }
        catch (Exception ex)
        {
            mensajeError = $"Error inesperado: {ex.Message}";
            pacientes = new List<Paciente>();
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private string FormatearFecha(DateTime fecha)
    {
        // Verificar si la fecha es válida (no es la fecha mínima por defecto)
        if (fecha == DateTime.MinValue || fecha.Year < 1900)
        {
            return "-";
        }
        return fecha.ToString("dd/MM/yyyy");
    }

    private void AgregarPaciente()
    {
        NavigationManager.NavigateTo("/nuevoeditarpaciente");
    }

    private void EditarPaciente(int id)
    {
        NavigationManager.NavigateTo($"/nuevoeditarpaciente?IdPacienteEditado={id}");
    }

    private async Task Eliminar(Paciente paciente)
    {
        try
        {
            var respuesta = await SweetAlert.FireAsync(new SweetAlertOptions
            {
                Title = "Borrando Paciente",
                Text = $"¿Está seguro que desea borrar al paciente {paciente.Nombre}?",
                Icon = SweetAlertIcon.Warning,
                ShowCancelButton = true,
                ConfirmButtonText = "Sí, quiero borrarlo",
                CancelButtonText = "No, esperar"
            });

            if (respuesta.IsConfirmed)
            {
                await PacienteService.DeleteAsync(paciente.Id);
                await SweetAlert.FireAsync("Eliminado", "El paciente ha sido eliminado correctamente", SweetAlertIcon.Success);
                await CargarPacientes();
            }
        }
        catch (Exception ex)
        {
            await SweetAlert.FireAsync("Error", $"Error al eliminar: {ex.Message}", SweetAlertIcon.Error);
        }
    }
}
