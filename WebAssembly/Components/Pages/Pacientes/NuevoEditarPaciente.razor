@page "/nuevoeditarpaciente"
@inject IGenericService<Paciente> PacienteService
@inject IProfesionalService ProfesionalService
@inject NavigationManager NavigationManager
@inject SweetAlertService SweetAlert

<HeaderPage TitlePage="@(IdPacienteEditado == 0 ? "Agregar Paciente" : "Editar Paciente")"/>

@if (paciente == null || profesionales == null)
{
    <p class="text-center mt-3"><em>Cargando...</em></p>
}
else
{
    <EditForm Model="paciente" OnValidSubmit="Guardar">
        <DataAnnotationsValidator />

        <div class="form-group mb-2">
            <label for="Nombre">Nombre: <span class="text-danger">*</span></label>
            <InputText id="Nombre" class="form-control" @bind-Value="paciente.Nombre" />
            <ValidationMessage For="@(() => paciente.Nombre)" />
        </div>

        <div class="form-group mb-2">
            <label for="Dni">DNI: <span class="text-danger">*</span></label>
            <InputText id="Dni" class="form-control" @bind-Value="paciente.Dni" />
            <ValidationMessage For="@(() => paciente.Dni)" />
        </div>

        <div class="form-group mb-2">
            <label for="Telefono">Teléfono: <span class="text-danger">*</span></label>
            <InputText id="Telefono" class="form-control" @bind-Value="paciente.Telefono" />
            <ValidationMessage For="@(() => paciente.Telefono)" />
        </div>

        <div class="form-group mb-2">
            <label for="Email">Email:</label>
            <InputText id="Email" class="form-control" @bind-Value="paciente.Email" />
            <ValidationMessage For="@(() => paciente.Email)" />
        </div>

        <div class="form-group mb-2">
            <label for="Direccion">Dirección:</label>
            <InputText id="Direccion" class="form-control" @bind-Value="paciente.Direccion" placeholder="Calle, número, ciudad" />
        </div>

        <div class="form-group mb-2">
            <label for="FechaNacimiento">Fecha de nacimiento: <span class="text-danger">*</span></label>
            <input type="date" 
                   id="FechaNacimiento" 
                   class="form-control" 
                   value="@ObtenerFechaParaInput()"
                   @onchange="ActualizarFecha" />
            <ValidationMessage For="@(() => paciente.FechaNacimiento)" />
            @if (mostrarErrorFecha)
            {
                <div class="text-danger small">El campo Fecha de Nacimiento es obligatorio.</div>
            }
        </div>

        <div class="form-group mb-2">
            <label for="IdProfesional">Profesional:</label>
            <InputSelect id="IdProfesional" class="form-select" @bind-Value="paciente.ProfesionalId">
                <option value="">Seleccione un profesional</option>
                @foreach (var profesional in profesionales)
                {
                    <option value="@profesional.Id">@profesional.Nombre</option>
                }
            </InputSelect>
        </div>

        <button type="submit" class="btn btn-primary mb-2" disabled="@guardando">
            @if (guardando)
            {
                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                <span>Guardando...</span>
            }
            else
            {
                <span>Guardar</span>
            }
        </button>
        <button type="button" class="btn btn-secondary mb-2" @onclick="Cancelar" disabled="@guardando">Cancelar</button>
    </EditForm>
}

@code {
    [SupplyParameterFromQuery]
    [Parameter]
    public int IdPacienteEditado { get; set; }

    private Paciente? paciente;
    private List<Profesional>? profesionales;
    private bool guardando = false;
    private bool mostrarErrorFecha = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            profesionales = await ProfesionalService.GetAllAsync(string.Empty);
            
            if (IdPacienteEditado != 0)
            {
                paciente = await PacienteService.GetByIdAsync(IdPacienteEditado);
                if (paciente == null)
                {
                    await SweetAlert.FireAsync("Error", "No se encontró el paciente", SweetAlertIcon.Error);
                    paciente = new Paciente();
                }
            }
            else
            {
                paciente = new Paciente();
            }
        }
        catch (Exception ex)
        {
            await SweetAlert.FireAsync("Error", $"Error al cargar datos: {ex.Message}", SweetAlertIcon.Error);
            paciente = new Paciente();
            profesionales = new List<Profesional>();
        }   
    }

    private string ObtenerFechaParaInput()
    {
        // Si la fecha es válida (no es MinValue), mostrarla
        if (paciente?.FechaNacimiento != null && 
            paciente.FechaNacimiento != DateTime.MinValue && 
            paciente.FechaNacimiento.Year > 1900)
        {
            return paciente.FechaNacimiento.ToString("yyyy-MM-dd");
        }
        // Si no hay fecha válida, dejar el campo vacío
        return string.Empty;
    }

    private void ActualizarFecha(ChangeEventArgs e)
    {
        if (paciente != null && e.Value != null)
        {
            var valorFecha = e.Value.ToString();
            if (!string.IsNullOrWhiteSpace(valorFecha) && DateTime.TryParse(valorFecha, out var fecha))
            {
                paciente.FechaNacimiento = fecha;
                mostrarErrorFecha = false;
            }
            else
            {
                paciente.FechaNacimiento = DateTime.MinValue;
            }
        }
    }

    private async Task Guardar()
    {
        // Validar fecha manualmente
        mostrarErrorFecha = paciente == null || 
                           paciente.FechaNacimiento == DateTime.MinValue || 
                           paciente.FechaNacimiento.Year < 1900;

        if (mostrarErrorFecha)
        {
            StateHasChanged();
            return; // No continuar si la fecha no es válida
        }

        try
        {
            guardando = true;
            StateHasChanged();

            if (paciente != null)
            {
                // Asegurar que los campos opcionales no sean null si están vacíos
                if (string.IsNullOrWhiteSpace(paciente.Email))
                {
                    paciente.Email = null;
                }
                
                if (string.IsNullOrWhiteSpace(paciente.Direccion))
                {
                    paciente.Direccion = null;
                }

                // Limpiar navegación para evitar referencia circular
                paciente.Profesional = null;

                if (IdPacienteEditado == 0)
                {
                    await PacienteService.AddAsync(paciente);
                    await SweetAlert.FireAsync("Éxito", "Paciente agregado correctamente", SweetAlertIcon.Success);
                }
                else
                {
                    paciente.Id = IdPacienteEditado;
                    await PacienteService.UpdateAsync(paciente);
                    await SweetAlert.FireAsync("Éxito", "Paciente actualizado correctamente", SweetAlertIcon.Success);
                }

                NavigationManager.NavigateTo("/pacientes");
            }
        }
        catch (Exception ex)
        {
            await SweetAlert.FireAsync("Error", $"Error al guardar: {ex.Message}", SweetAlertIcon.Error);
        }
        finally
        {
            guardando = false;
        }
    }

    private void Cancelar()
    {
        NavigationManager.NavigateTo("/pacientes");
    }
}