@page "/turnos"
@inject IGenericService<Turno> TurnoService
@inject NavigationManager NavigationManager
@inject ILogger<Turno> Logger
@inject SweetAlertService SweetAlert

<HeaderPage 
    TitlePage="Turnos"
    SubtitlePage="Agenda de turnos para organizar citas y controlar asistencia."
    ButtonText="Nuevo Turno"
    OnButtonClick="AgregarTurno" />

@if (turnos == null)
{
    <p><em>Cargando turnos...</em></p>
}
else if (!turnos.Any())
{
    <div class="alert alert-info">No hay turnos registrados</div>
}
else
{
    <DataTable TItem="Turno" 
               Items="turnos" 
               OnEdit="EditarTurnoObj"
               OnDelete="Eliminar"
               EmptyMessage="No hay turnos registrados">
        <HeaderContent>
            <th>ID</th>
            <th>Profesional</th>
            <th>Paciente</th>
            <th>Fecha y Hora</th>
            <th>Duración (min)</th>
            <th>Estado</th>
            <th class="text-center">Acciones</th>
        </HeaderContent>
        <RowContent>
            <td class="id-column">@context.Id</td>
            <td class="name-column"><strong>@(context.Profesional != null ? context.Profesional.Nombre : "Sin asignar")</strong></td>
            <td class="name-column"><strong>@(context.Paciente != null ? context.Paciente.Nombre : "Sin asignar")</strong></td>
            <td>@FormatearFechaHora(context.FechaHora)</td>
            <td>@context.DuracionMinutos</td>
            <td>
                <span class="estado-lista">
                    @context.EstadoTurno.ToString()
                </span>
            </td>
        </RowContent>
    </DataTable>
}

@code {
    private List<Turno>? turnos;

    protected override async Task OnInitializedAsync()
    {
        await CargarTurnos();
    }

    private async Task CargarTurnos()
    {
        try
        {
            turnos = await TurnoService.GetAllAsync(string.Empty);
            Logger.LogInformation($"Turnos obtenidos: {turnos?.Count}");

// Se elimina el filtro de turnos cancelados ya que ahora se maneja en el servicio.
            // if (turnos != null)
            // {
            //     turnos = turnos.Where(t => !t.CanceladoPorProfesional).ToList();
            // }
        }
        catch (Exception ex)
        {
            await SweetAlert.FireAsync("Error", $"Error al cargar turnos: {ex.Message}", SweetAlertIcon.Error);
            turnos = new List<Turno>();
        }
    }

    private string FormatearFechaHora(DateTime fechaHora)
    {
        if (fechaHora == DateTime.MinValue || fechaHora.Year < 1900)
        {
            return "Sin asignar";
        }
        return fechaHora.ToString("dd/MM/yyyy") + " a las " + fechaHora.ToString("HH:mm");
    }

    private string ObtenerClaseEstado(EstadoTurnoEnum estado)
    {
        return estado switch
        {
            EstadoTurnoEnum.Reservado => "bg-info",
            EstadoTurnoEnum.Confirmado => "bg-success",
            EstadoTurnoEnum.Cancelado => "bg-danger",
            EstadoTurnoEnum.Atendido => "bg-primary",
            EstadoTurnoEnum.Ausente => "bg-warning",
            _ => "bg-secondary"
        };
    }

    private string ObtenerClaseEstadoTexto(EstadoTurnoEnum estado)
    {
        return estado switch
        {
            EstadoTurnoEnum.Reservado => "text-info",
            EstadoTurnoEnum.Confirmado => "text-success",
            EstadoTurnoEnum.Cancelado => "text-danger",
            EstadoTurnoEnum.Atendido => "text-primary",
            EstadoTurnoEnum.Ausente => "text-warning",
            _ => string.Empty
        };
    }

    private void AgregarTurno()
    {
        NavigationManager.NavigateTo("/nuevoeditarturno");
    }

    private void EditarTurnoObj(Turno turno)
    {
        NavigationManager.NavigateTo($"/nuevoeditarturno?IdTurnoEditado={turno.Id}");
    }

    private async Task Eliminar(Turno turno)
    {
        try
        {
            var respuesta = await SweetAlert.FireAsync(new SweetAlertOptions
            {
                Title = "Borrando Turno",
                Text = $"¿Está seguro que desea eliminar el turno de {turno.Profesional?.Nombre ?? "Profesional sin asignar"} correspondiente al día {FormatearFechaHora(turno.FechaHora)}?",
                Icon = SweetAlertIcon.Warning,
                ShowCancelButton = true,
                ConfirmButtonText = "Sí, quiero borrarlo",
                CancelButtonText = "No, esperar"
            });

            if (respuesta.IsConfirmed)
            {
                await TurnoService.DeleteAsync(turno.Id);
                await SweetAlert.FireAsync("Eliminado", "El turno ha sido eliminado correctamente", SweetAlertIcon.Success);
                await CargarTurnos();
            }
        }
        catch (Exception ex)
        {
            await SweetAlert.FireAsync("Error", $"Error al eliminar: {ex.Message}", SweetAlertIcon.Error);
        }
    }
}
