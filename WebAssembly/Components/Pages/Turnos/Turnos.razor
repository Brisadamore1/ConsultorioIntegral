@page "/turnos"
@inject IGenericService<Turno> TurnoService
@inject NavigationManager NavigationManager
@inject ILogger<Turno> Logger
@inject SweetAlertService SweetAlert

<HeaderPage 
    TitlePage="Turnos"
    SubtitlePage="Agenda de turnos para organizar citas y controlar asistencia."
    ButtonText="Nuevo Turno"
    OnButtonClick="AgregarTurno" />

@if (turnos == null)
{
    <p><em>Cargando turnos...</em></p>
}
else if (!turnos.Any())
{
    <div class="alert alert-info">No hay turnos registrados</div>
}
else
{
    <DataTable TItem="Turno" 
               Items="turnos" 
               OnEdit="EditarTurno"
               OnDelete="Eliminar"
               OnAttend="AtenderTurno"
               EmptyMessage="No hay turnos registrados">
        <HeaderContent>
            <th>ID</th>
            <th>Profesional</th>
            <th>Paciente</th>
            <th>Fecha y Hora</th>
            <th>Duración (min)</th>
            <th>Estado</th>
            <th class="text-center">Acciones</th>
        </HeaderContent>
        <RowContent>
            <td class="id-column">@context.Id</td>
            <td class="name-column"><strong>@(context.Profesional?.Nombre)</strong></td>
            <td class="name-column"><strong>@(context.Paciente?.Nombre)</strong></td>
            <td>@FormatearFechaHora(context.FechaHora)</td>
            <td>@context.DuracionMinutos</td>
            <td>
                <span class="estado-lista">
                    @context.EstadoTurno.ToString()
                </span>
            </td>
        </RowContent>
    </DataTable>
}

@code {
    private List<Turno>? turnos;

    protected override async Task OnInitializedAsync()
    {
        await CargarTurnos();
    }

    private async Task CargarTurnos()
    {
        try
        {
            turnos = await TurnoService.GetAllAsync(string.Empty);
            Logger.LogInformation($"Turnos obtenidos: {turnos?.Count}");
        }
        catch (Exception ex)
        {
            await SweetAlert.FireAsync("Error", $"Error al cargar turnos: {ex.Message}", SweetAlertIcon.Error);
            //Evita fallos en la visualización si ocurre un error al obtener los datos.
            turnos = new List<Turno>();
        }
    }

    private string FormatearFechaHora(DateTime fechaHora)
    {
        if (fechaHora == DateTime.MinValue || fechaHora.Year < 1900)
        {
            return "Sin asignar";
        }
        return fechaHora.ToString("dd/MM/yyyy") + " a las " + fechaHora.ToString("HH:mm");
    }

    private void AgregarTurno()
    {
        NavigationManager.NavigateTo("/nuevoeditarturno");
    }

    private void EditarTurno(Turno turno)
    {
        NavigationManager.NavigateTo($"/nuevoeditarturno?IdTurnoEditado={turno.Id}");
    }

    private async Task Eliminar(Turno turno)
    {
        try
        {
            var respuesta = await SweetAlert.FireAsync(new SweetAlertOptions
            {
                Title = "Borrando Turno",
                Text = $"¿Está seguro que desea eliminar el turno de {turno.Profesional?.Nombre ?? "Profesional sin asignar"} correspondiente al día {FormatearFechaHora(turno.FechaHora)}?",
                Icon = SweetAlertIcon.Warning,
                ShowCancelButton = true,
                ConfirmButtonText = "Sí, quiero borrarlo",
                CancelButtonText = "No, esperar"
            });

            if (respuesta.IsConfirmed)
            {
                await TurnoService.DeleteAsync(turno.Id);
                await SweetAlert.FireAsync("Eliminado", "El turno ha sido eliminado correctamente", SweetAlertIcon.Success);
                await CargarTurnos();
            }
        }
        catch (Exception ex)
        {
            await SweetAlert.FireAsync("Error", $"Error al eliminar: {ex.Message}", SweetAlertIcon.Error);
        }
    }

    private async Task AtenderTurno(Turno turno)
    {
        try
        {
            if (turno.EstadoTurno == EstadoTurnoEnum.Atendido)
            {
                await SweetAlert.FireAsync("Información", "El turno ya está marcado como Atendido", SweetAlertIcon.Info);
                return;
            }

            // Crear copia para actualizar (evitamos romper las referencias usadas en la UI)
            var turnoUpdate = new Turno
            {
                Id = turno.Id,
                PacienteId = turno.PacienteId,
                ProfesionalId = turno.ProfesionalId,
                FechaHora = turno.FechaHora,
                DuracionMinutos = turno.DuracionMinutos,
                EstadoTurno = EstadoTurnoEnum.Atendido,
                CanceladoPorProfesional = turno.CanceladoPorProfesional,
                MotivoCancelacion = turno.MotivoCancelacion,
                IsDeleted = turno.IsDeleted
            };

            var actualizado = await TurnoService.UpdateAsync(turnoUpdate);
            if (actualizado)
            {
                // Actualizamos el objeto original para reflejar el nuevo estado inmediatamente
                turno.EstadoTurno = EstadoTurnoEnum.Atendido;
                await SweetAlert.FireAsync("Éxito", "El turno fue marcado como Atendido", SweetAlertIcon.Success);
                // Recargamos la lista completa para asegurar coherencia
                await CargarTurnos();
                StateHasChanged();
            }
            else
            {
                await SweetAlert.FireAsync("Error", "No se pudo actualizar el turno", SweetAlertIcon.Error);
            }
        }
        catch (Exception ex)
        {
            await SweetAlert.FireAsync("Error", $"Error al marcar como atendido: {ex.Message}", SweetAlertIcon.Error);
        }
    }
}
