@inject NavigationManager NavigationManager
@inject FirebaseAuthService AuthService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <span class="navbar-brand">Consultorio Integral Web</span>
    </div>
</div>


<div class="nav-scrollable">
    <nav class="flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        @if (isAuthenticated)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="pacientes">
                    <span class="bi bi-people-fill-nav-menu" aria-hidden="true"></span> Pacientes
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="profesionales">
                    <span class="bi bi-person-vcard-fill-nav-menu" aria-hidden="true"></span> Profesionales
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="contactosemergencia">
                    <span class="bi bi-telephone-fill-nav-menu" aria-hidden="true"></span> Contactos Emerg.
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="turnos">
                    <span class="bi bi-calendar-check-fill-nav-menu" aria-hidden="true"></span> Turnos
                </NavLink>
            </div>
        }
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="login">
                <span class="bi bi-login" aria-hidden="true"></span> @textoLogin
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool isAuthenticated = false;

    //Define el texto del link de login según el estado de autenticación
    private string textoLogin => isAuthenticated ? "Cerrar sesión" : "Login";

    protected override async Task OnInitializedAsync()
    {
        //Pide al servicio y se fija si el usuario está autenticado 
        isAuthenticated = await AuthService.IsUserAuthenticated();
        //Conecta el evento OnChangeLogin con el método ChequeoEstadoLogin para que se dispare cuando cambie el estado de login
        AuthService.OnChangeLogin += ChequeoEstadoLogin;
    }

    public async void ChequeoEstadoLogin()
    {
        //Cuando se dispara el evento, vuelve a chequear el estado de autenticación
        isAuthenticated = await AuthService.IsUserAuthenticated();
        //Se redibuja el componente y aparecen los otros menús
        StateHasChanged();

    }
}

