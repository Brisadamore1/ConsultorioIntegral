<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AppMovil.ViewModels"
             x:Class="AppMovil.Views.RegistrarseView"
             BackgroundColor="White"
             Title="Crear Cuenta"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.BindingContext>
        <viewmodels:RegistrarseViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="14" VerticalOptions="Center">
            <!-- Logo 
            <Image Source="logo.png"
                   HeightRequest="100"
                   WidthRequest="100"
                   HorizontalOptions="Center" /> 
            -->

            <!-- Nombre de la app -->
            <Label Text="Consultorio Integral"
                   FontAttributes="Bold"
                   FontSize="25"
                   HorizontalOptions="Center"
                   TextColor="#111"
                   Margin="0,5,0,0" />

            <!-- Subtítulo -->
            <Label Text="Crea tu cuenta para acceder"
                   FontSize="14"
                   TextColor="#666"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20" />

            <!-- Campo nombre -->
            <VerticalStackLayout Spacing="6" HorizontalOptions="Fill">
                <Label Text="Apellido y Nombre" FontSize="14" TextColor="#222" />
                <Border BackgroundColor="White"
                        Stroke="#ddd"
                        StrokeThickness="1"
                        HorizontalOptions="Fill">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Entry Placeholder="Tu nombre completo"
                           Text="{Binding Nombre}"
                           BackgroundColor="Transparent"
                           TextColor="Black"
                           PlaceholderColor="#999"
                           FontSize="15"
                           HeightRequest="50"
                           Margin="12,0" />
                </Border>
            </VerticalStackLayout>

            <!-- Campo correo -->
            <VerticalStackLayout Spacing="6" HorizontalOptions="Fill">
                <Label Text="Correo electrónico" FontSize="14" TextColor="#222" />
                <Border BackgroundColor="White"
                        Stroke="#ddd"
                        StrokeThickness="1"
                        HorizontalOptions="Fill">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Entry Placeholder="tu@email.com"
                           Keyboard="Email"
                           Text="{Binding Mail}"
                           BackgroundColor="Transparent"
                           TextColor="Black"
                           PlaceholderColor="#999"
                           FontSize="15"
                           HeightRequest="50"
                           Margin="12,0" />
                </Border>
            </VerticalStackLayout>

            <!-- Campo contraseña -->
            <VerticalStackLayout Spacing="6" HorizontalOptions="Fill">
                <Label Text="Contraseña" FontSize="14" TextColor="#222" />
                <Border BackgroundColor="White"
                        Stroke="#ddd"
                        StrokeThickness="1"
                        HorizontalOptions="Fill">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Entry Placeholder="••••••"
                           IsPassword="True"
                           Text="{Binding Password}"
                           BackgroundColor="Transparent"
                           TextColor="Black"
                           PlaceholderColor="#999"
                           FontSize="15"
                           HeightRequest="50"
                           Margin="12,0" />
                </Border>
            </VerticalStackLayout>

            <!-- Campo verificar contraseña -->
            <VerticalStackLayout Spacing="6" HorizontalOptions="Fill">
                <Label Text="Verificar Contraseña" FontSize="14" TextColor="#222" />
                <Border BackgroundColor="White"
                        Stroke="#ddd"
                        StrokeThickness="1"
                        HorizontalOptions="Fill">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Entry Placeholder="••••••"
                           IsPassword="True"
                           Text="{Binding VerifyPassword}"
                           BackgroundColor="Transparent"
                           TextColor="Black"
                           PlaceholderColor="#999"
                           FontSize="15"
                           HeightRequest="50"
                           Margin="12,0" />
                </Border>
            </VerticalStackLayout>

            <!-- Botón registrarse -->
            <Button Text="Registrarse"
                    Command="{Binding RegistrarseCommand}"
                    IsEnabled="{Binding CanRegister}"
                    BackgroundColor="#f2f2f2"
                    TextColor="Black"
                    CornerRadius="8"
                    HeightRequest="50"
                    HorizontalOptions="Fill"
                    FontAttributes="Bold"
                    FontSize="16"
                    Margin="0,10,0,0">
                <Button.Triggers>
                    <Trigger TargetType="Button" Property="IsEnabled" Value="True">
                        <Setter Property="BackgroundColor" Value="Black" />
                        <Setter Property="TextColor" Value="White" />
                    </Trigger>
                </Button.Triggers>
            </Button>

            <!-- Botón cancelar -->
            <Button Text="Cancelar"
                    Command="{Binding CancelarCommand}"
                    BackgroundColor="#f2f2f2"
                    TextColor="Black"
                    CornerRadius="8"
                    HeightRequest="50"
                    HorizontalOptions="Fill"
                    FontSize="16" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>