<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovil.Views.IniciarSesionView"
             xmlns:viewModels="clr-namespace:AppMovil.ViewModels"
             BackgroundColor="White"
             Title="IniciarSesionView"
             NavigationPage.HasNavigationBar="False">
    <!-- Cada vez que se hace bindig reconoce los elementos que tiene el view model -->
    <ContentPage.BindingContext>
        <viewModels:IniciarSesionViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="14" VerticalOptions="Center">

            <!-- Logo -->
            <Image Source="logo.png"
                HeightRequest="100"
                WidthRequest="100"
                HorizontalOptions="Center" />

            <!-- Nombre -->
            <Label Text="Consultorio Integral"
                FontAttributes="Bold"
                FontSize="25"
                HorizontalOptions="Center"
                TextColor="#111"
                Margin="0,5,0,0" />

            <!-- Subtítulo -->
            <Label Text="Accede a tu consultorio digital"
                FontSize="14"
                TextColor="#666"
                HorizontalOptions="Center"
                Margin="0,0,0,20" />

            <!-- Campo correo con extension de marcado-->
            <VerticalStackLayout Spacing="6" HorizontalOptions="Fill">
                <Label Text="Correo electrónico" FontSize="14" TextColor="#222" />
                <Border BackgroundColor="White"
                    Stroke="#ddd"
                    StrokeThickness="1"
                    HorizontalOptions="Fill">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Entry Placeholder="tu@email.com"
                        Keyboard="Email"
                        Text="{Binding Mail}"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        PlaceholderColor="#999"
                        FontSize="15"
                        HeightRequest="50"
                        Margin="12,0" />
                </Border>
            </VerticalStackLayout>

            <!-- Campo contraseña -->
            <VerticalStackLayout Spacing="6" HorizontalOptions="Fill">
                <Label Text="Contraseña" FontSize="14" TextColor="#222" />
                <Border BackgroundColor="White"
                    Stroke="#ddd"
                    StrokeThickness="1"
                    HorizontalOptions="Fill">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Entry Placeholder="••••••"
                        IsPassword="True"
                        Text="{Binding Password}"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        PlaceholderColor="#999"
                        FontSize="15"
                        HeightRequest="50"
                        Margin="12,0" />
                </Border>
            </VerticalStackLayout>

            <!-- Recordar contraseña -->
            <HorizontalStackLayout
                Padding="0,10"
                Margin="0,5,0,0"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Spacing="6">

                <CheckBox 
                    IsChecked="{Binding Rememberpassword}"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    BackgroundColor="White"
                    Color="#444"
                    WidthRequest="20"
                    HeightRequest="20" />

                <Label 
                    Text="Recordar contraseña"
                    FontSize="14"
                    VerticalOptions="Center"
                    TextColor="#333"
                    LineBreakMode="NoWrap" />
            </HorizontalStackLayout>

            <!-- Botón iniciar sesión -->
            <Button Text="Iniciar sesión"
                Command="{Binding IniciarSesionCommand}"
                BackgroundColor="Black"
                TextColor="White"
                CornerRadius="8"
                HeightRequest="50"
                HorizontalOptions="Fill"
                FontAttributes="Bold"
                FontSize="16"
                Margin="0,10,0,0" />

            <!-- Separador -->
            <Label Text="¿No tienes cuenta?" 
                FontSize="13" 
                TextColor="#555" 
                HorizontalOptions="Center"
                Margin="0,15,0,5" />

            <!-- Botón registrarse -->
            <Button Text="Registrarse"
                Command="{Binding RegistrarseCommand}"
                BackgroundColor="#f2f2f2"
                TextColor="Black"
                CornerRadius="8"
                HeightRequest="50"
                HorizontalOptions="Fill"
                FontSize="16" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
