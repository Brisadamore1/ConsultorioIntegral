<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AppMovil.ViewModels"
             x:Class="AppMovil.Views.ProfesionalesView"
             Title="Profesionales"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.BindingContext>
        <viewModels:ProfesionalesViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, Auto, *, Auto">
        <!-- TÃ­tulo simple -->
        <Frame Grid.Row="0" HasShadow="False" CornerRadius="8" Margin="10" Padding="10">
            <Label Text="Lista de profesionales" HorizontalOptions="Center" FontAttributes="Bold" />
        </Frame>

        <!-- Filtro que ocupa todo el ancho -->
        <Frame Grid.Row="1" HasShadow="False" CornerRadius="8" Margin="5" Padding="6">
            <SearchBar Placeholder="Buscar profesionales..." Text="{Binding FilterProfessionals}" HorizontalOptions="FillAndExpand" />
        </Frame>

        <!-- Lista: cada item similar a destacados -->
        <RefreshView Grid.Row="2" Command="{Binding ObtenerProfesionalesCommand}" IsRefreshing="{Binding IsRefreshing}">
            <CollectionView ItemsSource="{Binding Profesionales}" SelectionMode="Single" SelectedItem="{Binding SelectedProfessional, Mode=TwoWay}">
                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="20" Spacing="8" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="No hay profesionales para mostrar." />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame HasShadow="False" CornerRadius="8" Margin="5" Padding="10">
                            <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto">
                                <!-- Izquierda: Nombre y Profesion debajo -->
                                <StackLayout Grid.Column="0" Orientation="Vertical">
                                    <Label Text="{Binding Nombre}" FontAttributes="Bold" />
                                    <Label Text="{Binding Profesion}" TextColor="#757575"/>
                                </StackLayout>

                                <!-- Derecha: Telefono arriba, Especialidad abajo -->
                                <StackLayout Grid.Column="1" Orientation="Vertical" HorizontalOptions="End">
                                    <Label Text="{Binding Telefono}" HorizontalOptions="End" TextColor="#C4C4C4" />
                                    <Label HorizontalOptions="End" TextColor="#757575">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label" Binding="{Binding Especialidad}" Value="">
                                                <Setter Property="Text" Value="Sin asignar" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Label" Binding="{Binding Especialidad}" Value="{x:Null}">
                                                <Setter Property="Text" Value="Sin asignar" />
                                            </DataTrigger>
                                        </Label.Triggers>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding Especialidad}" TextColor="#757575"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Acciones -->
        <HorizontalStackLayout Grid.Row="3" HorizontalOptions="Center" Spacing="20" Margin="0,10,0,10">
            <Button Text="Agregar" Command="{Binding AgregarProfesionalCommand}" />
            <Button Text="Editar" Command="{Binding EditarProfesionalCommand}" />
            <Button Text="Eliminar" Command="{Binding EliminarProfesionalCommand}" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>