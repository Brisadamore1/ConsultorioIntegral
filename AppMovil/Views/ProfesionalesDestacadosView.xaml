<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AppMovil.ViewModels"
             x:Class="AppMovil.Views.ProfesionalesDestacadosView"
             Title="Destacados"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.BindingContext>
        <viewModels:ProfesionalesDestacadosViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, Auto, *">
        <!-- TÃ­tulo simple dentro de un Frame (usa estilos globales) -->
        <Frame Grid.Row="0" HasShadow="False" CornerRadius="8" Margin="10" Padding="10">
            <Label Text="Lista de nuevos profesionales " HorizontalOptions="Center" FontAttributes="Bold" />
        </Frame>

        <!-- Filtro que ocupa todo el ancho, minimal props -->
        <Frame Grid.Row="1" HasShadow="False" CornerRadius="8" Margin="5" Padding="6">
            <SearchBar Placeholder="Buscar nuevos profesionales..." Text="{Binding FilterProfessionals}" />
        </Frame>

        <!-- Lista: cada item en un Frame sencillo -->
        <RefreshView Grid.Row="2" Command="{Binding ObtenerProfesionalesCommand}" IsRefreshing="{Binding IsRefreshing}">
            <CollectionView ItemsSource="{Binding Profesionales}" SelectionMode="None">
                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="20" Spacing="8" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="No hay profesionales para mostrar." />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame HasShadow="False" CornerRadius="8" Margin="5" Padding="10">
                            <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto">
                                <StackLayout Grid.Column="0" Orientation="Vertical">
                                    <Label Text="{Binding Nombre}" FontAttributes="Bold" />
                                    <Label Text="{Binding Profesion}" TextColor="#757575" />
                                </StackLayout>

                                <!-- Telefono: aparece a la derecha en la parte superior -->
                                <Label Grid.Column="1" Grid.Row="0" Text="{Binding Telefono}" HorizontalOptions="End" VerticalOptions="Start" TextColor="#C4C4C4" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>