<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AppMovil.ViewModels"
             x:Class="AppMovil.Views.ProfesionalesDestacadosView"
             Title="Profesionales destacados"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.BindingContext>
        <viewModels:ProfesionalesDestacadosViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, *, Auto, Auto">
        <HorizontalStackLayout Grid.Row="0">
            <Label Text="Buscar:"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="0,10,0,10"/>
            <Entry Placeholder="Buscar profesionales..."
                   Text="{Binding FilterProfessionals}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="0,10,0,10"/>
        </HorizontalStackLayout>

        <RefreshView Grid.Row="1"
                     Command="{Binding ObtenerProfesionalesCommand}"
                     IsRefreshing="{Binding IsRefreshing}">
            <CollectionView ItemsSource="{Binding Profesionales}"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="20" Spacing="8" HorizontalOptions="Center" VerticalOptions="Center">
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" ColumnDefinitions="Auto,*">
                            <!--<Image Grid.Column="0" Source="{Binding Imagen}" HeightRequest="80" WidthRequest="80" />-->
                            <StackLayout Grid.Column="1" Orientation="Vertical" Padding="10,0,0,0">
                                <Label Text="{Binding Nombre}" FontAttributes="Bold" />
                                <Label Text="{Binding Especialidad}">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label" Binding="{Binding Especialidad}" Value="">
                                            <Setter Property="Text" Value="Sin asignar" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Label" Binding="{Binding Especialidad}" Value="{x:Null}">
                                            <Setter Property="Text" Value="Sin asignar" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </StackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
        <!-- Pantalla de destacados: solo visualización, sin acciones de edición -->
    </Grid>
</ContentPage>