<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:viewModels="clr-namespace:AppMovil.ViewModels"
             x:Class="AppMovil.Views.AddEditProfesionalView"
             Title="Profesionales"
             BackgroundColor="#121212"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.BindingContext>
        <viewModels:AddEditProfesionalViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="14" VerticalOptions="Center">
       
            <!-- Campo nombre del profesional -->
            <VerticalStackLayout Spacing="6" HorizontalOptions="Fill">
                <Label Text="Nombre Completo:" FontSize="14" TextColor="White" />
                <Border BackgroundColor="#121212"
                        Stroke="#ddd"
                        StrokeThickness="1"
                        HorizontalOptions="Fill">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Entry Placeholder="Nombre del profesional"
                           Text="{Binding Nombre}"
                           BackgroundColor="Transparent"
                           TextColor="White"
                           PlaceholderColor="#999"
                           FontSize="15"
                           HeightRequest="50"
                           Margin="12,0" />
                </Border>
            </VerticalStackLayout>

            <!-- Campo profesión -->
            <VerticalStackLayout Spacing="6" HorizontalOptions="Fill">
                <Label Text="Profesión:" FontSize="14" TextColor="White" />
                <Border BackgroundColor="#121212"
                        Stroke="#ddd"
                        StrokeThickness="1"
                        HorizontalOptions="Fill">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Entry Placeholder="Profesión"
                           Text="{Binding Profesion}"
                           BackgroundColor="Transparent"
                           TextColor="White"
                           PlaceholderColor="#999"
                           FontSize="15"
                           HeightRequest="50"
                           Margin="12,0" />
                </Border>
            </VerticalStackLayout>

            <!-- Campo especialidad -->
            <VerticalStackLayout Spacing="6" HorizontalOptions="Fill">
                <Label Text="Especialidad:" FontSize="14" TextColor="White" />
                <Border BackgroundColor="#121212"
             Stroke="#ddd"
             StrokeThickness="1"
             HorizontalOptions="Fill">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Entry Placeholder="Especialidad (opcional)"
                Text="{Binding Especialidad}"
                BackgroundColor="Transparent"
                TextColor="White"
                PlaceholderColor="#999"
                FontSize="15"
                HeightRequest="50"
                Margin="12,0" />
                </Border>
            </VerticalStackLayout>

            <!-- Campo matrícula -->
            <VerticalStackLayout Spacing="6" HorizontalOptions="Fill">
                <Label Text="Matrícula:" FontSize="14" TextColor="White" />
                <Border BackgroundColor="#121212"
                        Stroke="#ddd"
                        StrokeThickness="1"
                        HorizontalOptions="Fill">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Entry Placeholder="Matrícula"
                           Text="{Binding Matricula}"
                           BackgroundColor="Transparent"
                           TextColor="White"
                           PlaceholderColor="#999"
                           FontSize="15"
                           HeightRequest="50"
                           Margin="12,0" />
                </Border>
            </VerticalStackLayout>

            <!-- Campo email -->
            <VerticalStackLayout Spacing="6" HorizontalOptions="Fill">
                <Label Text="Correo electrónico:" FontSize="14" TextColor="White" />
                <Border BackgroundColor="#121212"
                        Stroke="#ddd"
                        StrokeThickness="1"
                        HorizontalOptions="Fill">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Entry Placeholder="tu@email.com"
                           Keyboard="Email"
                           Text="{Binding Mail}"
                           BackgroundColor="Transparent"
                           TextColor="White"
                           PlaceholderColor="#999"
                           FontSize="15"
                           HeightRequest="50"
                           Margin="12,0" />
                </Border>
            </VerticalStackLayout>

            <!-- Campo teléfono -->
            <VerticalStackLayout Spacing="6" HorizontalOptions="Fill">
                <Label Text="Teléfono:" FontSize="14" TextColor="White" />
                <Border BackgroundColor="#121212"
                        Stroke="#ddd"
                        StrokeThickness="1"
                        HorizontalOptions="Fill">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Entry Placeholder="Teléfono"
                           Text="{Binding Telefono}"
                           BackgroundColor="Transparent"
                           TextColor="White"
                           PlaceholderColor="#999"
                           FontSize="15"
                           HeightRequest="50"
                           Margin="12,0" />
                </Border>
            </VerticalStackLayout>

            <!-- Campo destacado: checkbox a la izquierda del texto -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Start" VerticalOptions="Center">
                <CheckBox IsChecked="{Binding Destacado}" Color="#7A8BA3" VerticalOptions="Center" />
                <Label Text="Destacado" FontSize="14" TextColor="White" VerticalOptions="Center" />
            </HorizontalStackLayout>

            <!-- Botón guardar -->
            <Button Text="Guardar"
                    Command="{Binding SaveProfessionalCommand}"
                    BackgroundColor="Black"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="50"
                    HorizontalOptions="Fill"
                    FontAttributes="Bold"
                    FontSize="16"
                    Margin="0,10,0,0" />

            <!-- Botón cancelar -->
            <Button Text="Cancelar"
                    Command="{Binding CancelProfessionalCommand}"
                    BackgroundColor="#f2f2f2"
                    TextColor="Black"
                    CornerRadius="8"
                    HeightRequest="50"
                    HorizontalOptions="Fill"
                    FontSize="16" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>