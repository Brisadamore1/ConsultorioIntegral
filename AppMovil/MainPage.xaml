<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovil.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="0"
            Spacing="15">
            <Image
                Source="iniciales.png"
                HeightRequest="200"
                Aspect="AspectFit"
                SemanticProperties.Description="Bienvenido" />

            <Label
                Text="Bienvenido a Consultorio Integral"
                Style="{StaticResource Headline}"
                TextColor="#B19DC2"
                SemanticProperties.HeadingLevel="Level1"
                SemanticProperties.Description="Welcome" />
            <Label
                Text="Sistema para el control y organización del equipo médico del consultorio."
                Style="{StaticResource SubHeadline}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
