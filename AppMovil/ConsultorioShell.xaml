<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppMovil.ConsultorioShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppMovil"
    xmlns:views="clr-namespace:AppMovil.Views"
    xmlns:viewsmodels="clr-namespace:AppMovil.ViewModels"
    xmlns:contentviews="clr-namespace:AppMovil.ContentViews"
    FlyoutBehavior="Disabled"
    Title="AppMovil"
    FlyoutBackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}"
    FlyoutBackgroundImageAspect="AspectFill"
    FlyoutHeaderBehavior="CollapseOnScroll">

    <Shell.BindingContext>
        <viewsmodels:ConsultorioShellViewModel />
    </Shell.BindingContext>
    
    <!-- Recursos: estilo reutilizable para items del Flyout (simplifica plantilla) -->
    <Shell.Resources>
        <ResourceDictionary>
            <Style x:Key="FlyoutItemFrameStyle" TargetType="Frame">
                <Setter Property="HasShadow" Value="False" />
                <Setter Property="Padding" Value="8,10" />
                <Setter Property="Margin" Value="4,2" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="BorderColor" Value="Transparent" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="Transparent" />
                                    <Setter Property="CornerRadius" Value="8" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState Name="Selected">
                                <VisualState.Setters>
                                    <!-- Fondo gris claro y borde redondeado cuando el item del flyout est치 seleccionado -->
                                    <Setter Property="BackgroundColor" Value="#E6E6E6" />
                                    <Setter Property="BorderColor" Value="#D0D0D0" />
                                    <Setter Property="CornerRadius" Value="10" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Shell.Resources>

    <!-- Default flyout template (use platform default for correct navigation on mobile) -->
    
    <Shell.FlyoutHeader>
        <contentviews:FlyoutHeader />
    </Shell.FlyoutHeader>

    <Shell.FlyoutFooter>
        <contentviews:FlyoutFooter />
    </Shell.FlyoutFooter>


    <FlyoutItem Route="nuestra_app"
                FlyoutDisplayOptions="AsMultipleItems"
                x:Name="FlyoutItemsPrincipal">

        <!-- Home -->
        <ShellContent
            Title="Home"
            x:Name="scHome"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="casa.png"
            Route="MainPage" />

        <!-- Profesionales Destacados -->
        <ShellContent
            Title="Destacados"
            x:Name="scDestacados"
            ContentTemplate="{DataTemplate views:ProfesionalesDestacadosView}"
            Icon="destacado.png"
            Route="Destacados" />

        <!-- Secci칩n Profesionales con pesta침as -->
        <Tab Title="Profesionales" Route="profesionales" Icon="medico.png">

            <ShellContent
                Title="Profesionales"
                x:Name="scListaProfesionales"
                ContentTemplate="{DataTemplate views:ProfesionalesView}"
                Icon="medico.png"
                Route="ListaProfesionales" />

            <ShellContent
                Title="Agregar-Editar Profesional"
                x:Name="scAgregarProfesional"
                ContentTemplate="{DataTemplate views:AddEditProfesionalView}"
                Icon="historial.png"
                Route="AgregarEditarProfesional" />

        </Tab>

    </FlyoutItem>

    <!-- Menu item in flyout -->
    <MenuItem x:Name="miCerrarSesion"
              Text="Cerrar sesi칩n"
              Command="{Binding LogoutCommand}"
              IconImageSource="cerrar.png" />

    <!-- Login ShellContent (visible cuando IsUserLogout true) -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:IniciarSesionView}"
        Route="Login"
        IsVisible="{Binding IsUserLogout}"
        Icon="logo.png" />
</Shell>
