<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppMovil.ConsultorioShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppMovil"
    xmlns:views="clr-namespace:AppMovil.Views"
    xmlns:viewsmodels="clr-namespace:AppMovil.ViewModels"
    xmlns:contentviews="clr-namespace:AppMovil.ContentViews"
    FlyoutBehavior="Disabled"
    Title="AppMovil"
    FlyoutBackgroundImage="logo.png"
     FlyoutBackgroundImageAspect="AspectFill"
    FlyoutHeaderBehavior="CollapseOnScroll">

    <Shell.BindingContext>
        <viewsmodels:ConsultorioShellViewModel />
    </Shell.BindingContext>
    
    <Shell.FlyoutHeader>
        <contentviews:FlyoutHeader />
    </Shell.FlyoutHeader>

    <Shell.FlyoutFooter>
        <contentviews:FlyoutFooter />
    </Shell.FlyoutFooter>


    <FlyoutItem Route="nuestra_app"
                FlyoutDisplayOptions="AsMultipleItems"
                x:Name="FlyoutItemsPrincipal">

        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="casa.png"
            Route="MainPage" />
        <ShellContent
            Title="Profesionales Destacados"
            ContentTemplate="{DataTemplate views:ProfesionalesDestacadosView}"
            Icon="destacado.png"
            Route="Destacados" />
        
        <Tab Title="Profesionales"
             Route="profesionales">

            <ShellContent
                Title="Lista de Profesionales"
                Icon="medico.png"
                ContentTemplate="{DataTemplate views:ProfesionalesView}"
                Route="ListaProfesionales" />

            <ShellContent
                Title="Agregar profesional"
                Icon="historial.png"
                ContentTemplate="{DataTemplate views:AddEditProfesionalView}"
                Route="AgregarEditarProfesional" />

        </Tab>
    </FlyoutItem>

    <MenuItem Text="Cerrar sesiÃ³n"
              Command="{Binding LogoutCommand}"  
              IconImageSource="cerrar.png"/>

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:IniciarSesionView}"
        Route="Login" 
        IsVisible="{Binding IsUserLogout}"/>
</Shell>
