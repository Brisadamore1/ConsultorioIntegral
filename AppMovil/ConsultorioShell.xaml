<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppMovil.ConsultorioShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppMovil"
    xmlns:views="clr-namespace:AppMovil.Views"
    xmlns:viewsmodels="clr-namespace:AppMovil.ViewModels"
    xmlns:contentviews="clr-namespace:AppMovil.ContentViews"
    FlyoutBehavior="Disabled"
    Title="AppMovil"
    FlyoutHeaderBehavior="CollapseOnScroll">

    <Shell.BindingContext>
        <viewsmodels:ConsultorioShellViewModel />
    </Shell.BindingContext>

    <!-- Header/Footer del Flyout deshabilitados temporalmente para evitar problemas de inicialización en Windows -->

    <FlyoutItem Route="nuestra_app"
                FlyoutDisplayOptions="AsMultipleItems"
                x:Name="FlyoutItemsPrincipal">

        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <Tab Title="Profesionales"
             Route="profesionales">

            <ShellContent
                Title="Lista de Profesionales"
                ContentTemplate="{DataTemplate views:ProfesionalesView}"
                Route="ListaProfesionales" />

            <ShellContent
                Title="Agregar profesional"
                ContentTemplate="{DataTemplate views:AddEditProfesionalView}"
                Route="AgregarEditarProfesional" />

        </Tab>
    </FlyoutItem>

    <MenuItem Text="Cerrar sesión"
              Command="{Binding LogoutCommand}" />

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:IniciarSesionView}"
        Route="Login" 
        IsVisible="{Binding IsUserLogout}"/>
</Shell>
